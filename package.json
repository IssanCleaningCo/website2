{
  "name": "issan-cleaning",
  "version": "1.0.0",
  "description": "Issan Cleaning Services Website",
  "main": "index.js",
  "scripts": {
    "convert-images": "node convert-images.js",
    "convert-social": "node convert-social-icons.js",
    "compress-videos": "node compress-videos.js",
    "optimize-css": "postcss css/*.css --use autoprefixer cssnano --no-map --dir dist/css",
    "critical-css": "critical css/style.css --base . --inline > css/critical.css",
    "optimize-js": "uglifyjs js/*.js --compress --mangle --output dist/js/script.min.js",
    "copy-assets": "copyfiles -u 1 \"images/**/*\" \"videos/**/*\" dist/",
    "clean": "rimraf dist",
    "prebuild": "npm run clean",
    "copy-images": "npx cpx \"images/**/*.*\" dist/images",
    "copy-videos": "npx cpx \"videos/**/*.*\" dist/videos",
    "copy-css": "npx cpx \"css/**/*.*\" dist/css",
    "copy-fonts": "npx cpx \"fonts/**/*.*\" dist/fonts",
    "copy-html": "node process-html.js",
    "copy-api": "npx cpx \"api/**/*.*\" dist/api",
    "build": "npm run build-js && npm run copy-images && npm run copy-videos && npm run copy-css && npm run copy-fonts && npm run copy-html && npm run copy-api && npm run convert-images",
    "build-js": "npx mkdirp dist/js && npx uglify-js js/script.js -o dist/js/script.min.js --compress --mangle",
    "minify-js": "mkdir -p dist/js && uglifyjs src/js/script.js -o dist/js/script.min.js"
  },
  "dependencies": {
    "@sendgrid/mail": "^8.1.5",
    "resend": "^4.6.0",
    "sharp": "^0.33.2"
  },
  "devDependencies": {
    "autoprefixer": "^10.4.17",
    "copyfiles": "^2.4.1",
    "cpx": "^1.5.0",
    "critical": "^5.0.0",
    "cssnano": "^6.0.3",
    "mkdirp": "^3.0.1",
    "postcss": "^8.4.35",
    "postcss-cli": "^11.0.0",
    "rimraf": "^5.0.5",
    "uglify-js": "^3.19.3"
  }
}
