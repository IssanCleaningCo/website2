{
  "version": 2,
  "rewrites": [
    {
      "source": "/api/(.*)",
      "destination": "/api/$1"
    },
    {
      "source": "/",
      "destination": "/index.html"
    },
    {
      "source": "/(.*)/$",
      "destination": "/$1/index.html"
    },
    {
      "source": "/(.*)",
      "destination": "/$1.html"
    }
  ]
}